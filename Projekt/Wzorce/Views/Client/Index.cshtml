@model IEnumerable<Wzorce.Models.Client>

@{
    ViewBag.Title = "Lista klientów";
}
<br/>
<h2>Lista klientów</h2>

<p>
    <input type="button" class="btn" value="Dodaj nowego klienta" onclick="location.href='@Url.Action("Add", "Client")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nr_telefonu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_urodzenia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwisko)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Imie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nr_telefonu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_urodzenia)
        </td>
        <td><input type="button" class="btn" value="Podgląd" onclick="location.href='@Url.Action("Details", "Client", new { id = item._id })'" /></td>
        <td><input type="button" class="btn" value="Usuń" onclick="location.href='@Url.Action("Delete", "Client", new { id = item._id })'" /></td>
        <td><input type="button" class="btn" value="Edytuj" onclick="location.href='@Url.Action("Edit", "Client", new { id = item._id })'" /></td>
    </tr>
}

</table>
